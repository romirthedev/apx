<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow the app to control other applications -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- Allow accessibility features -->
    <key>com.apple.security.device.accessibility</key>
    <true/>
    
    <!-- Allow screen recording/capture -->
    <key>com.apple.security.device.camera</key>
    <true/>
    
    <!-- Allow microphone access for voice commands -->
    <key>com.apple.security.device.microphone</key>
    <true/>
    
    <!-- Network access for API calls -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- File system access -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Temporary exception for full disk access -->
    <key>com.apple.security.temporary-exception.files.absolute-path.read-write</key>
    <array>
        <string>/</string>
    </array>
    
    <!-- Allow running external executables -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Disable sandboxing for full system control -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Allow JIT compilation for Python -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Hardened runtime exceptions -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
</dict>
</plist>
